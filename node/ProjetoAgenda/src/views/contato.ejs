<%- include('includes/head'); %>

<%- include('includes/navbar'); %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    
    <div class="col-lg-8 mt-3">
      
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seu contato abaixo</p>
      <%- include('includes/Messages'); %>
      <div class="shadow rounded px-3 py-3 my-2 mx-2 bg-dark text-light col-lg">
        <h4>Contato</h4>
        <p>Preencha corretamente os campos abaico</p>
        
        <%      if(contato._id){      %>

        <form class="contato" action="/contato/edit/<%= contato._id %>" method="POST" >

        <% }else{              %>
          <form class="contato" action="/contato/register" method="POST" >

        <%       }          %>
          <input type="hidden" name="_csrf" value=<%= csrfToken %>>
          <div class="form-group">
            <label for="exampleInputEmail1">Nome</label>
            <input value="<%= contato.nome %>" type="text" name="nome" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Insira email">
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Sobrenome</label>
            <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Insira email">
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input value="<%= contato.email %>" type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Insira email">
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Telefone</label>
            <input value="<%= contato.telefone %>" type="tel" name="telefone" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Insira email">
          </div>
          
          <button type="submit" class="mx-auto my-3 btn btn-primary">Salvar</button>
        </form>
      </div>
     
    
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>

    

<%- include('includes/footer'); %> 